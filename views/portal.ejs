<!DOCTYPE html>
<html ng-app="msn">
<head>
    <title><%= title %></title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.21/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.21/angular-resource.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.21/angular-route.min.js"></script>
    <!--JQuery-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <!--Font Awesome-->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <!--Custom-->
    <script type="text/javascript" src="app/services.js"></script>
    <script type="text/javascript" src="app/controllers.js"></script>
    <script type="text/javascript" src="app/app.js"></script>
    <link rel="stylesheet" type="text/css" href="css/style.css">
</head>
<body ng-controller="NavCtrl">
<section id="msntop" class="btmLeftCorner">
    <p class="header" > MSN</p>
    <p class="notHeader"> McGill Sports Network</p>
    <a href="" ng-click="signOut()">Sign Out</a>
</section>
<nav id="portalNav">
    <div ng-repeat="navItem in user.navItems">
        <a ng-href="{{navItem.link}}">{{navItem.name}}</a>
    </div>
    <div style="float:right;">
        <a href="" ng-click="signOut()">Sign Out</a>
    </div>

    <select ng-model="currentView" ng-options="navItem.name for navItem in user.navItems" ng-change="currentViewChange()">
    </select>
</nav>
<section id="portalBox">
    <div ng-view></div>
</section>
</body>
</html>